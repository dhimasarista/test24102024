                "tags": [
                    "Expenses"
                ],
                "summary": "Tambah pengeluaran",
                "operationId": "055acd698fcfe0e7df065ac8adf4b6db",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
